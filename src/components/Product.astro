---
import { Image } from "astro:assets";
import M25 from "/public/images/M25.jpg";
import M27 from "/public/images/M27.jpg";
import M21 from "/public/images/M21.jpg";
import M28 from "/public/images/M28.jpg";
import M17 from "/public/images/M17-1.jpg";
---

<div>
    <div class="product-hub">
        <div class="product-card">
            <a href="/productDetails">
                <Image class="product-image" src={M25} alt="Countertop" transition:name="img" height="375"/>
                <p class="product-text">M25 - Aspen White</p>
            </a>
        </div>

        <div class="product-card">
            <a href="">
                <Image class="product-image" src={M27} alt="Countertop" transition:name="img" height="375"/>
                <p class="product-text">M27 - Baron Grey</p>
            </a>
        </div>

        <div class="product-card">
            <a href="">
                <Image class="product-image" src={M21} alt="Countertop" transition:name="img" height="375"/>
                <p class="product-text">M21 - Hollis White</p>
            </a>
        </div>

        <div class="product-card">
            <a href="">
                <Image class="product-image" src={M28} alt="Countertop" transition:name="img" height="375"/>
                <p class="product-text">M28 - Antique Grey</p>
            </a>
        </div>

        <div class="product-card">
            <a href="">
                <Image class="product-image" src={M17} alt="Countertop" transition:name="img" height="375"/>
                <p class="product-text">Natural Maple</p>
            </a>
        </div>
    </div>

    <style>
        .product-hub {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 10px;
            padding: 15px 15px;
        }

        .product-card {
            position: relative;
            overflow: hidden; /* Ensures text stays within the image boundaries */
        }

        .product-image {
            width: 100%;
            border-radius: 15px;
            display: block;
        }

        .product-text {
            position: absolute;
            bottom: 10px; /* Distance from the bottom of the image */
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(0, 0, 0, 0.6); /* Optional: semi-transparent background for better contrast */
            color: white; /* Text color */
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            text-align: center;
            white-space: nowrap; /* Prevent text wrapping */
        }

        @media (max-width: 768px) {
            .product-hub {
                grid-template-columns: repeat(2, 1fr); /* 2 columns on mobile */
            }

            .product-card {
                position: relative;
                overflow: hidden; /* Ensures text stays within the image boundaries */
            }

            .product-image {
                width: 100%;
                height: 200px;
                border-radius: 15px;
                display: block;
            }

            .product-text {
                position: absolute;
                bottom: 10px; /* Distance from the bottom of the image */
                left: 50%;
                transform: translateX(-50%);
                background-color: rgba(0,0,0,0.6); /* Optional: semi-transparent background for better contrast */
                color: white; /* Text color */
                padding: 5px 10px;
                border-radius: 5px;
                font-size: 14px;
                text-align: center;
                white-space: nowrap; /* Prevent text wrapping */
            }
        }

        @media (max-width: 768px) {
            .product-hub {
                grid-template-columns: 1fr; /* 2 columns on mobile */
            }

            .product-card {
                position: relative;
                overflow: hidden; /* Ensures text stays within the image boundaries */
            }

            .product-image {
                width: 100%;
                height: 200px;
                border-radius: 15px;
                display: block;
            }

            .product-text {
                position: absolute;
                bottom: 10px; /* Distance from the bottom of the image */
                left: 50%;
                transform: translateX(-50%);
                background-color: rgba(0,0,0,0.6); /* Optional: semi-transparent background for better contrast */
                color: white; /* Text color */
                padding: 5px 10px;
                border-radius: 5px;
                font-size: 14px;
                text-align: center;
                white-space: nowrap; /* Prevent text wrapping */
            }
        }
    </style>
</div>