<nav class="navbar">
    <div>
        <a href="/"><img src="/images/GELogosmall.png" alt="" /></a>
    </div>

    <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="#">Gallery</a></li>
        <li><a href="#">Contact</a></li>
    </ul>

    <div class="bars-icon" id="bars">
        <i class="fa-solid fa-bars"></i>
    </div>
</nav>

<style>
    .navbar {
        background-color: black;
        color: bisque;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 5px 45px;
        position: relative;
    }

    .nav-links {
        display: flex;
        gap: 1rem;
        list-style: none;
    }

    .nav-links a {
        color: bisque;
        text-transform: uppercase;
        list-style: none;
        text-decoration: none;
    }

    /* hidding the burger menu in desktop view */
    .bars-icon {
        display: none;
    }

    /* resposive design */
    @media (max-width: 768px) {
        .bars-icon {
            display: block;
        }

        /* Updated .navbar for Mobile */
        .navbar .nav-links {
            display: none; /* Hidden by default */
            background-color: black;
            position: absolute;
            top: 45px; /* Adjust this to place the menu below the navbar */
            left: 0;
            right: 0;
            flex-direction: column;
            text-align: center;
            gap: 0;
            padding: 20px;
            z-index: 1000; /* Add z-index to ensure it appears on top */
        }

        /* Show the nav-links when the "show" class is added */
        .navbar .nav-links.show {
            display: flex; /* Show the menu when toggled */
        }

        .nav-links li {
            margin-bottom: 20px;
        }
    }
</style>

<script>
    // Using DOMContentLoaded to ensure the DOM is fully loaded before accessing elements
    document.addEventListener("astro:page-load", () => {
        const bars = document.getElementById("bars");
        const navLinks = document.querySelector(".nav-links");

        // Toggle the 'show' class on click
        bars.addEventListener("click", () => {
            navLinks.classList.toggle("show");
        });

        // Check screen size on resize to remove 'show' class if width > 768px
        window.addEventListener("resize", () => {
            if (window.innerWidth > 768) {
                navLinks.classList.remove("show"); // Reset to hidden if desktop view
            }
        });
    });
</script>
