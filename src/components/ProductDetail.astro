---
interface Props {
    id: string;
    name: string;
    description: string;
    picture: string;
}

const { id, name, description, picture } = Astro.props as Props;
---

<section class="product-detail">
    <p><strong>Product ID:</strong> {id}</p>
    <p><strong>Name:</strong> {name}</p>
    <p><strong>Description:</strong> {description}</p>
    <img src={picture} alt={name} class="product-image" />
</section>

<style>
    .product-detail {
        padding: 15px;
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    .product-image {
        width: 100%;
        border-radius: 15px;
        display: block;
        margin-top: 10px;
    }
</style>

